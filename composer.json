{
    "name": "facebook/hack-codegen",
    "description": "Hack Codegen is a library for programatically generating Hack code",
    "keywords": ["code generation", "Hack"],
    "require": {
        "hhvm": ">=3.21.3",
        "hhvm/hhvm-autoload": "^1.5",
        "hhvm/hsl": "<1.0 >=0.3"
    },
    "bin": [ "bin/hh-codegen-verify-signatures" ],
    "authors": [
        {
            "name": "Fred Emmott",
            "role": "Developer"
        },
        {
            "name": "Drew Hoskins",
            "role": "Developer"
        },
        {
            "name": "Gaurav Kumar",
            "role": "Developer"
        },
        {
            "name": "Alejandro Marcu",
            "role": "Developer"
        },
        {
            "name": "Matthieu Martin",
            "role": "Developer"
        }
    ],
    "type": "library",
    "autoload": {
        "classmap": [
            "lib/",
            "src/"
        ],
        "files": [
            "lib/typedefs.php",
            "lib/utils.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "test/"
        ],
        "files": [
            "test/TestCodegenConfig.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "91carriage/phpunit-hhi": "^5.6",
        "hhvm/type-assert": "^3.0",
        "hhvm/hhast": "^v0.1"
    }
}
