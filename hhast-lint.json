{
  "roots": [ "src/", "examples/", "tests/" ],
  "builtinLinters": "all",
  "disabledLinters": [
    "Facebook\\HHAST\\Linters\\UseStatementWithAsLinter"
  ],
  "overrides": [
    {
      "patterns": [
        "examples/dorm/demo/DormUser.php",
        "examples/dorm/demo/DormUserMutator.php"
      ],
      "disableAllAutoFixes": true
    },
    {
      "patterns": [
        "examples/dorm/codegen.php",
        "examples/dorm/demo/demo_usage.php"
      ],
      "disabledLinters": [
        "Facebook\\HHAST\\Linters\\StrictModeOnlyLinter"
      ]
    },
    {
      "patterns": [ "src/PlainSprintf.php" ],
      "disabledLinters": [
        "Facebook\\HHAST\\Linters\\CamelCasedMethodsUnderscoredFunctionsLinter"
      ]
    }
  ]
}
